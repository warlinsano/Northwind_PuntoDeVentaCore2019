<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create New Region</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="Create" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="RegionDescription" class="col-form-label">Regions:</label>
                        <input type="text" class="form-control" id="RegionId" name="RegionId" hidden>
                        <input type="text" class="form-control" id="RegionDescriptionCreate" name="RegionDescription">
                        <span for="RegionDescriptionCreate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Status" class="col-form-label">Status:</label>
                        <select class="form-control" id="Status" name="Status">
                            <option value="">-Selecionar -</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary " data-dismiss="modal">
                    Close
                    <span aria-hidden="true" class="fa fa-times"></span>

                </button>
                <button type="submit" onclick="" class="btn btn-primary" id="btn_Create">
                    Save
                    <span aria-hidden="true" class="fa fa-save -alt fa-fw"></span>
                </button>
                @*<button type="button" class="btn btn-primary">Create</button>*@
            </div>
        </div>
    </div>
</div>


