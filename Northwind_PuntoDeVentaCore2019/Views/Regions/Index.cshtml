                    @*<a asp-action="Details" asp-route-id="@item.RegionId" class="btn btn-info">
                         <span aria-hidden="true" class="fa  fa-1x fa-list"></span>
                        </a> |*@
                    <td class="td_detalles">
                        <button type="button" onclick="Detalles(@item.RegionId)" class="btn btn-info" data-toggle="modal" data-target="#exampleModaldatails">
                            <span aria-hidden="true" class="fa  fa-1x fa-list"></span>
                        </button>|
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.RegionId" class="btn btn-danger">
                            <span aria-hidden="true" class="fa fa-times"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


