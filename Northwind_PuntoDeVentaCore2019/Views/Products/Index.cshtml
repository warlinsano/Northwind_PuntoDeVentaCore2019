@model IEnumerable<Northwind_PuntoDeVentaCore2019.Models.Products>

@{
    ViewData["Title"] = "Index";
}

@section header {
    <!-- Custom styles for this page -->
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Products</h1>
<p class="mb-4">Show a list of  all Products .</p>

<p>
    <a asp-action="Create" class="btn btn-primary ">
        <span aria-hidden="true" class="fa fa-plus"></span> Create New Products
    </a>
</p>

<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List of Products</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Photo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Supplier)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Photo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Supplier)
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                            <td>
                                @if (String.IsNullOrEmpty(item.PhotoBase64))
                                {
                                    <img class="img-profile rounded-circle" src="~/img/no_foto.png" height="50" width="50" />
                                }
                                else
                                {
                                    <img class="img-profile rounded-circle" src="@item.PhotoBase64" height="50" width="50" />

                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.CategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Supplier.CompanyName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning">
                                    <span aria-hidden="true" class="fa  fa-pencil-alt fa-fw"></span>
                                </a> |

                                <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info">
                                    <span aria-hidden="true" class="fa  fa-1x fa-list"></span>
                                </a> |

                                <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger">
                                    <span aria-hidden="true" class="fa fa-times"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



@section Scripts {
    <!-- Page level plugins -->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>

    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
}